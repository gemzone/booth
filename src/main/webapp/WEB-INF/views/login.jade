html(lang='ko')
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="shortcut icon", type="image/x-icon", href="favicon.ico")
        title Booth
        script(src="./static/js/angular.min.js")
        script(src="./static/js/angular-animate.min.js")
        script(src="./static/js/angular-route.min.js")
        script(src="./static/js/angular-sanitize.js")
        script(src="./static/js/angular-bind-html-compile.js")
        script(src="./static/js/loading-bar.js")
        link(href="./static/css/loading-bar.css", rel="stylesheet" )
        script(src="./static/js/jquery-3.1.1.min.js", charset="utf-8")
        script(src="./static/js/moment.min.js", charset="utf-8")
        script(src="./static/tether-1.3.3-dist/js/tether.min.js", charset="utf-8")
        script(src="./static/bootstrap-4.0.0-alpha.5-dist/js/bootstrap.min.js", charset="utf-8")
        link(href="./static/tether-1.3.3-dist/css/tether.min.css", rel="stylesheet")
        link(href="./static/bootstrap-4.0.0-alpha.5-dist/css/bootstrap.min.css", rel="stylesheet")
        link(href="./static/font-awesome-4.7.0/css/font-awesome.min.css", rel="stylesheet")
        link(href="./static/css/common.css", rel="stylesheet")
        script(src="./static/js/common.js")
        script(src="./static/js/facebook.js")
        script(src="./static/js/login.js")
    body
        // div.fb-like(data-share="true",data-width="450",data-show-faces="true")

        fb:login-button(scope='public_profile,email', onlogin='checkLoginState();')
        div#status

        div(ng-app="auth", ng-view="ng-view", style="padding:40px;") 
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
                    | &#x9;&#x9;&#x9;&#x9;
                    h4#signInModalLabel.modal-title 로그인

                .modal-body
                    .form-group
                        .input-group
                            label.input-group-addon.glyphicon.glyphicon-lock(for='username')
                                i.fa.fa-user
                            input#username.form-control(type='text', placeholder='Username', value="gz")
                    .form-group
                        .input-group
                            label.input-group-addon.glyphicon.glyphicon-lock(for='password')
                                i.fa.fa-lock
                            input#password.form-control(type='text', placeholder='Password', value="1231231")
                            | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                            
                .modal-footer
                    button.form-control.btn.btn-lg.btn-success.btn-block(ng-click="signIn();") 로그인
                    | &#x9;&#x9;&#x9;&#x9;
                
                    .or-box
                        .login-or
                            hr.hr-or
                            span.span-or 또는
                        .omb_login
                            .row.omb_row-sm-offset-3.omb_socialButtons
                                a.btn.btn-lg.btn-block.omb_btn-facebook(href="#", scope='public_profile,email',onclick="checkLoginState();")
                                    i.fa.fa-facebook.visible-xs
                                    span.hidden-xs Facebook
                            
                                a.btn.btn-lg.btn-block.omb_btn-google(href='#')
                                    i.fa.fa-google-plus.visible-xs
                                    span.hidden-xs Google+


