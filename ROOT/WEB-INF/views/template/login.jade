#loginModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='loginModalLabel', aria-hidden='true')
    .modal-dialog(style="width:360px;")
        .modal-content
            .modal-header
                button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
                | &#x9;&#x9;&#x9;&#x9;
                h4#loginModalLabel.modal-title Sign in
            .modal-body
                form(role='form')
                    .form-group
                        .input-group
                            input#username.form-control(type='text', placeholder='Username', value="test123")
                            label.input-group-addon.glyphicon.glyphicon-lock(for='username')
                                i.fa.fa-user
                    .form-group
                        .input-group
                            input#password.form-control(type='password', placeholder='Password', value="password123")
                            | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                            label.input-group-addon.glyphicon.glyphicon-lock(for='password')
                                i.fa.fa-lock
                .modal-footer
                    button.form-control.btn.btn-primary(ng-click="signIn();") sign_in
                    | &#x9;&#x9;&#x9;&#x9;