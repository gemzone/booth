.card(style="padding:5px;")
    input(type="text", class="form-control", placeholder="Title",id="postTitle", style="margin-bottom:5px;")
    textarea(style="resize:none;height:300px;width:100%;", id="postText")
.row
    .col-md-3
        button.btn.btn-secondary(ng-click="list(board.id, paging.currentPage);") list
    .col-md-6(style="text-align:center;")
        
    .col-md-3(style="text-align:right;")
        button.btn.btn-secondary.fa.fa-pencil(ng-click="addPost(board.id);") &#32;write

script.
    tinymce.init({
        selector: "textarea",  // change this value according to your HTML
        auto_focus: "postText",
        setup : function(ed)
        {
            ed.on('init', function() 
            {
                this.execCommand("fontName", false, "Arial");
                this.execCommand("fontSize", false, "14px");
            });
        }  
    });
